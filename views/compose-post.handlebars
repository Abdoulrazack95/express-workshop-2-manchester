<!DOCTYPE html>
<html lang="en">

<head>
{{>head-content}}
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
        {{>nav}}
    </nav>

    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('/img/cv-bg.jpg')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="page-heading">
                        <h1>{{firstName}} {{lastName}}</h1>
                        <hr class="small">
                        <span class="subheading">Today is {{currentTime}}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
               <form action="/compose-post" method="POST">
                    <div class="form-group">
                        <label for="title">Subject</label>
                        <input type="text" name="title" class="form-control" id="title" placeholder="New blog post ... required">
                    </div>
                    <div class="form-group">
                        <label for="summary">Summary</label>
                        <input type="text" name="summary" class="form-control" id="summary" placeholder="Summary" required>
                    </div>
                    <div class="form-group">
                        <label for="content">Your blog post</label>
                        <textarea name="content" class="form-control" id="content" rows="4" maxlength="250" required></textarea>
                    </div>
                    <div class="form-group">
                         <label for="author">Author name</label>
                        <input type="text" name="author" class="form-control" id="author" placeholder="Your name" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg" value="Add Post">Post</button>
                </form>
            </div>
        </div>
    </div>

    <hr>

    <!-- Footer -->
    <footer>
       {{>footer}}
    </footer>

    <!-- jQuery -->
    <script src="vendor/jquery/jquery.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="vendor/bootstrap/js/bootstrap.min.js"></script>

    <!-- Theme JavaScript -->
    <script src="js/clean-blog.min.js"></script>

</body>

</html>